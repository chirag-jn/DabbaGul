<?xml version="1.0" encoding="utf-8"?>

<LinearLayout   xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:id="@+id/explore_layout"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_margin="10dp"
    android:padding="10dp"
    android:background="@drawable/food_list_item_frame"
    android:clickable="true">


    <ImageView
        android:id="@+id/explore_food_image"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/food"
        android:scaleType="centerCrop"
        android:background="@drawable/food_frame"
        />


    <LinearLayout
        android:layout_gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginLeft="10dp"
        android:orientation="vertical"
        >
        <TextView
            android:id="@+id/explore_food_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:text="Pindi Chole with Rice"
            style="@android:style/TextAppearance.Material.Widget.Toolbar.Title"
            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="By"
                android:textSize="16dp"
                style="@style/TextAppearance.AppCompat.Caption"
                />

            <TextView
                android:id="@+id/explore_lunch_owner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16dp"
                android:text="Naman Gupta"
                android:layout_marginLeft="8dp"
                style="@android:style/TextAppearance.Material.Widget.Toolbar.Title"
                />
        </LinearLayout>

        <TextView
            android:id="@+id/explore_food_tags"
            android:layout_marginTop="3dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="#north-indian #no-mess #rice"
            android:textSize="14dp"   />

        <RelativeLayout
            android:layout_marginTop="3dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/explore_food_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2:30 pm"
                android:textSize="16dp"
                style="@style/TextAppearance.AppCompat.Title"
                />

            <TextView
                android:id="@+id/explore_food_distance"
                style="@android:style/TextAppearance.Material.Widget.Toolbar.Title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_gravity="end"
                android:layout_marginLeft="8dp"
                android:text="200m"
                android:textSize="16dp" />
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>