<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/popup_border"
    >

    <ImageView
        android:id="@+id/request_accept_cancel"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/ic_cancel_24px"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:tint="@color/backColor"
        />

    <TextView
        android:id="@+id/title_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:textSize="20dp"
        android:text="YAY!"
        android:textColor="@color/popupTextColor"/>

    <TextView
        android:id="@id/popup_text"
        android:layout_below="@+id/title_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginBottom="0dp"
        android:textSize="16dp"
        android:text="You are now a step closer\n to sharing your lunch with"
        android:textColor="@color/popupTextColor"/>

    <TextView
        android:id="@+id/profile_name"
        android:layout_below="@+id/popup_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginBottom="16dp"
        android:textSize="16dp"
        android:text="Naman"
        android:textStyle="bold"
        android:textColor="@color/popupTextColor"/>

    <Button
        android:id="@+id/send_message_button"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/profile_name"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:paddingLeft="40dp"
        android:paddingRight="40dp"
        android:background="@drawable/popup_button_border"
        android:text="Send a message"
        android:textAllCaps="false"
        android:textColor="@color/popupTextColor"
        android:textSize="16dp" />

</RelativeLayout>